generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Patient {
  id          String   @id @default(uuid())
  folderName  String
  dateOfBirth String?
  gender      String?
  conditions  String?
  allergies   String?
  comments    String?
  uploadedAt  DateTime @default(now())
  reportReady Boolean  @default(false)
  paid        Boolean  @default(false)
}
